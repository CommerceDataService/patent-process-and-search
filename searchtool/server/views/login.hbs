<div class="login-container  visible-sm  visible-lg visible-md ">
  <div class="hpanel">
    <div class="panel-header panel-header--script">
      <h2>Login</h2></div>
    <div class="panel-body">
      {{#if message}}<span class="text-success">{{message}}</span>{{/if}}
      <form action="/auth/local" id="loginForm" method="post" class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-4 control-label" for="email">email</label>

          <div class="col-sm-6">
            <input type="text" placeholder="" title="Please enter your email" required="" value="" name="username" id="username" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="password">Password</label>

          <div class="col-sm-6">
            <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="password" id="password" class="form-control">
          </div>
        </div>
        {{#if error}}
            <div class="row m-t-xl">
                <div class="col-sm-10 text-right">
                  {{error}}
                </div>
            </div>
        {{/if}}
       <div class="row">
          <div class="col-sm-10 text-right">
            <button class="btn btn-lg btn-info btn-outline">Login</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

