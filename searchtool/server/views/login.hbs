<div class="login-container  visible-sm  visible-lg visible-md ">
  <div class="hpanel">
    <div class="panel-header panel-header--script">
      <h2>Login</h2></div>
    <div class="panel-body">
      {{#if message}}<span class="text-success">{{message}}</span>{{/if}}
      <form action="/login" id="loginForm" method="post" class="form-horizontal">
        <div class="form-group">
          <label class="col-sm-4 control-label" for="email">email</label>

          <div class="col-sm-6">
            <input type="text" placeholder="" title="Please enter your email" required="" value="" name="email" id="email" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-4" for="password">Password</label>

          <div class="col-sm-6">
            <input type="password" title="Please enter your password" placeholder="******" required="" value="" name="password" id="password" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <div class="checkbox checkbox-success">
            <label for="saveLogin" class="col-sm-12 control-label">

              <div class="col-sm-10">
                <input name="saveLogin" type="checkbox" checked>Keep Me Signed In</label>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 text-right">
            <button class="btn btn-lg btn-info btn-outline">Login</button>
          </div>
        </div>

        <div class="row m-t-xl">
          <div class="col-sm-10 text-right">
            <!-- <p> -->
            <!-- <a class="m-r-sm" href="/register">Sign Up for Account</a>   -->
            <!--  <a href="/password-reset-request">Lost Password?</a> -->
            <!-- </p> -->
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

