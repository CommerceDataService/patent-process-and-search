{{#if term }}

  <div class="media-body">
    <center>
      {{#if result}}
        {{#if total}}
          {{{pagein}}}
        {{/if}}
      {{/if}}
    </center>
    <div class="row">
      <div class="col-lg-12">
        <hr>
        <div id="results" class="hpanel forum-box">

        {{#if ptab}}

          {{#each result}}
            <div class="media">
              <h4>  <a style="cursor:pointer"; onClick="javascript:document.getElementById('action_text').innerHTML =''; document.getElementById('action_text').innerHTML ='<b>File Doc Id:</b> {{appid}}, <b>Search Term:</b> {{../term}}<hr>{{breaklines textdata.[0]}}';"  data-item="{{appid}}" data-toggle="modal" data-target="#cancelModal"> PTAB ID: {{appid}}</a></h4>
              {{#with (lookup ../highlighting id) }}
                {{#if textdata}}
                  {{#each textdata}}
                    <li>{{{this}}}</li>
                  {{/each}}
                {{else}}
                  {{{truncate ../textdata.[0]}}}...
                {{/if}}
              {{/with}}
              <hr>
            </div>
          {{else}}
            <h1> No actions found for <span class="text-success">{{term}}</span> we may still be loading some </h1>
          {{/each}}

        {{else}}

          {{#each result}}
            <div class="media">
              <h4>  <a style="cursor:pointer"; onClick="javascript:document.getElementById('action_text').innerHTML =''; document.getElementById('action_text').innerHTML ='<b>File Doc Id:</b>{{filename}} , <b>Action Type:</b> {{action_type.[0]}} , <b>Search Term:</b> {{../term}}<hr>{{breaklines textdata.[0]}}';"  data-item="{{filename}}" data-toggle="modal" data-target="#cancelModal">  Office Action ID: {{filename}}</a> | {{action_type.[0]}}</h4>
              {{#with (lookup ../highlighting id) }}
                {{#if textdata}}
                  {{#each textdata}}
                    <li>{{{this}}}</li>
                  {{/each}}
                {{else}}
                  {{{truncate ../textdata.[0]}}}...
                {{/if}}
              {{/with}}
              <hr>
            </div>
          {{else}}
            <h1> No actions found for <span class="text-success">{{term}}</span> we may still be loading some </h1>
          {{/each}}

        {{/if}}

          <div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="panel-body text-center">
                  <div class="row text-right">
                    <h4><a class="text-right" onClick="close_modal();" href="#"><i class="pe-7s-close-circle"></i></a></h4>
                  </div>
                  <div class="row text-left">
                    <p id="action_text"></p>
                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>

      </div>
      <center>
        {{#if result}}
          {{#if total}}
            {{{pagein}}}
          {{/if}}
        {{/if}}
      </center>


{{else}}
  <h3> Welcome {{#if email }} {{email}} {{/if}}to the new USPTO Office Action Search App </h3>
{{/if}}
